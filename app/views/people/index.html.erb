<p id="notice"><%= notice %></p>

<h1>All Contacts</h1>

<%= form_tag people_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: "Search" %>
  </p>
<% end %>
<div id="cancel"><input type="text" name="cancel" placeholder="Cancel"></div>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Born date</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= image_tag(person.image,width:30,height:30) %></td>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= person.email %></td>
        <td><%= person.born_date %></td>
        <td><%= person.city %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<footer>
  <%= link_to '+', new_person_path %>
</footer>
